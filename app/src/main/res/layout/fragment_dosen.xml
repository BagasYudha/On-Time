<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DosenFragment"
    tools:ignore="ExtraText">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/DaftarDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Daftar Dosen"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TambahDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tambah Dosen Baru"
        android:textColor="@color/body"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DaftarDosen"
        />

    <EditText
        android:id="@+id/TambahDataDosen"
        android:layout_width="0dp"
         android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Tambahkan Data Dosen"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TambahDosen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MataKuliah"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/MataKuliah"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/poppins_regular"
        android:hint="Mata Kuliah"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/TambahDataDosen"
        app:layout_constraintTop_toTopOf="@+id/TambahDataDosen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <EditText
        android:id="@+id/EmailDosen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/poppins_regular"
        android:hint="Masukkan Email dosen"
        android:textSize="12sp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/TambahDataDosen"
        app:layout_constraintTop_toBottomOf="@+id/TambahDataDosen"
        app:layout_constraintEnd_toStartOf="@+id/round_button"  />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#0FB0EF"
        android:padding="2dp"
        android:layout_marginStart="10dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@id/EmailDosen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/EmailDosen"
        app:layout_constraintTop_toTopOf="@id/EmailDosen" />

    <TextView
        android:id="@+id/DaftarDosendanMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Daftar Dosen dan Mata Kuliah"
        android:textColor="@color/body"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailDosen" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDaftarDosen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/DaftarDosendanMatkul"
        app:layout_constraintTop_toBottomOf="@id/DaftarDosendanMatkul" />

</androidx.constraintlayout.widget.ConstraintLayout>
